<!--can update song's artist and genre-->
<!--redirect to song's show page-->
<h2>Edit Song</h2>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label>Name:</label>
    <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">

    <label>Edit Artists:</label>
       <% Artist.all.each do |artist| %>
        <input type="checkbox" id="<%= artist.name %>" name="artist[name]" value="<%= artist.id %>">
        <label><%= artist.name %></label>

    <% end %>
    

    <label>Edit Genres:</label>
        <% Genre.all.each do |genre| %>
        <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>">
        <label><%= genre.name %></label>

    <% end %>
    


    <label><h3>New Artist</h3>
        <label for="Artist Name">Artist Name: </label>
        <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>">
    

    <label><h3>New Genre</h3></label>
        <label>Name:</label>
        <input type="text" id="new_genre" name="genre[name]">

    <input type="submit" value="Save">
</form>

<a class="button" href="/songs">Songs</a>
