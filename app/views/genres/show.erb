<!--displays genre's artists and songs-->
<!--contains links to artist's and song's show page-->
<h1><%= @genre.name %></h1>

<h2>Songs: </h2>
<ul>
    <% @genre.songs.each do |song| %>
        <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
    <% end %>
</ul>

<h2>Artists: </h2>
<ul>
    <% @genre.artists.each do |artist| %>
        <li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></li>
    <% end %>
</ul>

<a class="button" href="/songs">Songs</a>
<a class="button" href="/artists">Artists</a>
<a class="button" href="/genres">Genres</a>
<a class="button" href="/">Home</a>